[Unit]
Description=PulseAudio daemon for %U
 
[Service]
RuntimeDirectory=pulse
EnvironmentDirectory=env
ExecStart=%p --exit-idle-time=-1 ${flags}
Restart=on-abort
 
[Install]
WantedBy=normal.target
