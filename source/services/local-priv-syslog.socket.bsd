[Unit]
Description=syslog socket used by local privileged clients to talk to syslog daemons on FreeBSD/TrueOS
Before=local-syslog.target

[Socket]
ListenDatagram=/run/logpriv
SocketMode=0660
PassCredentials=yes
PassSecurity=yes

[Install]
WantedBy=workstation.target
