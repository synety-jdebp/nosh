[Unit]
Description=Tell the kernel where the autofs mounts are
Wants=kmod@autofs
After=kmod@autofs

[Service]
Type=oneshot
EnvironmentDirectory=env
ExecStart=%p ${flags}
ExecStopPost=umount -A -t autofs
# This is a pseudo-daemon that does not have a running process.
RemainAfterExit=yes
Restart=no

[Install]
WantedBy=workstation.target
